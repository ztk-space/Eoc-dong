<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CamearActivity">
    <com.rk.myfeaturesapp.util.CustomTitleBar
        android:layout_width="match_parent"
        android:id="@+id/camearcustom"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/openCamera"
        android:layout_width="wrap_content"
        android:layout_centerInParent="true"
        android:text="录像"
        android:layout_height="wrap_content"/>
     <Button
         android:layout_below="@id/openCamera"
         android:id="@+id/camear"
         android:layout_width="wrap_content"
         android:layout_centerInParent="true"
         android:text="拍照"
         android:layout_height="wrap_content"/>
    <Button
        android:layout_below="@id/camear"
        android:id="@+id/open"
        android:layout_width="wrap_content"
        android:layout_centerInParent="true"
        android:text="相册"
        android:layout_height="wrap_content"/>
    <ImageView
        android:layout_marginTop="60dp"
        android:layout_below="@id/camear"
        android:layout_centerHorizontal="true"
        android:id="@+id/imagecamear"
        android:layout_width="50dp"
        android:layout_height="50dp"></ImageView>
</RelativeLayout>