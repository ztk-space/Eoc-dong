<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
     <com.rk.myfeaturesapp.util.CustomTitleBar
         android:id="@+id/maintitlebar"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"/>
     <Button
         android:id="@+id/btn_layout"
         android:text="tablayout"
         android:layout_width="match_parent"
         android:layout_marginRight="50dp"
         android:layout_marginLeft="50dp"
         android:layout_marginTop="20dp"
         android:layout_height="wrap_content"/>
     <Button
         android:id="@+id/btn_Bottomnavigation"
         android:text="BottomNavigationBar"
         android:layout_width="match_parent"
         android:layout_marginRight="50dp"
         android:layout_marginLeft="50dp"
         android:layout_marginTop="20dp"
         android:layout_height="wrap_content"/>
     <Button
         android:id="@+id/btn_SMS"
         android:text="SMS"
         android:layout_width="match_parent"
         android:layout_marginRight="50dp"
         android:layout_marginLeft="50dp"
         android:layout_marginTop="20dp"
         android:layout_height="wrap_content"/>
     <Button
         android:id="@+id/btn_camear"
         android:text="CAMERA"
         android:layout_width="match_parent"
         android:layout_marginRight="50dp"
         android:layout_marginLeft="50dp"
         android:layout_marginTop="20dp"
         android:layout_height="wrap_content"/>
     <Button
         android:id="@+id/btn_contact"
         android:text="Contact"
         android:layout_width="match_parent"
         android:layout_marginRight="50dp"
         android:layout_marginLeft="50dp"
         android:layout_marginTop="20dp"
         android:layout_height="wrap_content"/>
     <Button
         android:id="@+id/btn_opencontacts"
         android:text="Open contacts"
         android:layout_width="match_parent"
         android:layout_marginRight="50dp"
         android:layout_marginLeft="50dp"
         android:layout_marginTop="20dp"
         android:layout_height="wrap_content"/>
     <Button
         android:id="@+id/btn_switchappicon"
         android:text="Switch App icon"
         android:layout_width="match_parent"
         android:layout_marginRight="50dp"
         android:layout_marginLeft="50dp"
         android:layout_marginTop="20dp"
         android:layout_height="wrap_content"/>
</LinearLayout>